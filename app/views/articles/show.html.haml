- model_class = @article.class
.page-header
  %h1
    = @article.title
    %br
    %span.author= @article.user_id
    %span.created= @article.created_at

%p
  %strong= model_class.human_attribute_name(:category_id) + ':'
  %br
  = @article.category
%p
  = @article.content

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), articles_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_article_path(@article), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), article_path(@article), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
