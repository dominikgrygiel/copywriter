= form_for [current_user, @article], :url => article_url(current_user, @article), :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :content, :class => 'control-label'
    .controls
      = f.text_area :content, :class => 'text_area'
  .control-group
    = f.label :category_id, :class => 'control-label'
    .controls
      = f.select :category_id, options_from_collection_for_select(@categories, :id, :name)
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), root_url, :class => 'btn'
